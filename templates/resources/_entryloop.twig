{% paginate query as pageInfo, pageEntries %}
		
{% for entry in pageEntries %}
	<div class="w-full lg:w-1/2 p-3">
      <div class="flex flex-col lg:flex-row rounded overflow-hidden border shadow shadow-lg">
	        <div class="flex flex-wrap justify-between bg-white rounded-b lg:rounded-b-none lg:rounded-r leading-normal p-4">            
				<div class="text-black text-3xl italic leading-normal">
					<a href="{{ entry.getUrl }}" class="no-underline text-grey-darker hover:text-red-dark">
						{{ entry.title }}
					</a>	
				</div>
				<div class="text-black text-xl leading-normal">
					{{ entry.summary }}
					<br>
					<a href="{{ entry.getUrl }}" class="no-underline text-grey-darker hover:text-red-dark">
						Read more Â»
					</a>
				</div>
			</div>
		</div>
	</div>

{% endfor %}



<div class="w-full flex justify-between mx-auto my-12">
	<div class="px-6">
		{% if pageInfo.prevUrl %}
		<a href="{{ pageInfo.prevUrl }}" class="no-underline ">
			<button class="bg-red-darker shadow hover:bg-white text-white font-semibold hover:text-red-darker py-2 text-base rounded px-4 border-white border hover:border-red-darker">
                  <i class="fal fa-long-arrow-left"></i> &nbsp; Previous
            </button>
                
		</a>
		{% endif %}
		</div>
	<div class="px-6">
		{% if pageInfo.nextUrl %}
		<a href="{{ pageInfo.nextUrl }}" class="no-underline ">
			<button class="bg-red-darker shadow hover:bg-white text-white font-semibold hover:text-red-darker py-2 text-base rounded px-4 border-white border hover:border-red-darker">
				Next &nbsp;<i class="fal fa-long-arrow-right"></i>
			</button>
		</a>
	{% endif %}
	</div>

</div>