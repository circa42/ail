{% set entries = craft.entries.section('books').limit(1).all() %}
{% for entry in entries %}

{# Upcoming books #}
<section class="bg-white py-4 font-serif xs:my-16 lg:my-32">
  <div class="text-center container m-auto"> 
    <label for="tagline" class="uppercase tracking-wide font-bold text-center text-grey-dark"> Full collection of
    </label>
    <h2 class="mt-2 mb-4 font-medium max-w-sm m-auto italic">
      Impossible Books
    </h2>
    <hr class="border-b w-8 m-auto my-6">
  </div>
  
{% endfor %}

  <div class="container container max-w-xl m-auto flex flex-wrap flex-col md:flex-row items-center justify-start">
    <div class="flex flex-wrap">
    

{% set entries = craft.entries.section('books').all() %}


  {% for entry in entries %}
    <div class="w-full lg:w-1/2 p-3">
      <div class="flex flex-col lg:flex-row rounded overflow-hidden border shadow shadow-lg">
        <div class="flex flex-wrap justify-between bg-white rounded-b lg:rounded-b-none lg:rounded-r leading-normal p-4">              
          
          {% if entry.bookCover |length %}
            {% set assets = entry.bookCover.all() %}
              <div class="w-1/3">
                {% for asset in assets %}
                  <img src="{{ asset.getUrl('bookJacketThumb') }}">
                {% endfor %}                
              </div>
          {% endif %}

          <div class="
            {% if entry.bookCover |length %}
              w-2/3 
            {% else %}
              w-full
            {% endif %}
            px-4">
            <div class="text-black text-2xl italic mb-2 leading-normal">
              {{ entry.title }}
            </div>
            <label for="tagline" class="uppercase text-base tracking-wide font-bold text-center text-grey-dark"> 
              {{ entry.subTitle }} 
            </label>
            <div class="text-base mb-2 leading-normal">
              {{ entry.bookHook }}
            </div>
            {% if entry.comingSoon == true %}
            <div class="uppercase text-base tracking-wide font-bold text-grey mt-2">
              Coming soon
            </div>
            {% else %}
              <a href="{{ entry.amazonUrl }}" target="_blank">
                <button class="bg-red-darker shadow hover:bg-white text-white font-semibold hover:text-red-darker py-2 text-base rounded px-4 border-white border hover:border-red-darker">
                  Buy Now
                </button>
              </a>
            {% endif %}
          </div>


        </div>

      </div>
    </div>
  {% endfor %}








