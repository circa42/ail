{% if craft.entries.section('resources').ids() %}


{# Resources list #}
<section class="bg-white py-4 font-serif xs:my-16 lg:my-32">
  <div class="text-center container m-auto"> 
    <label for="tagline" class="uppercase tracking-wide font-bold text-center text-grey-dark"> 
    	From the 
    </label>
    <h2 class="mt-2 mb-4 font-medium max-w-sm m-auto italic">
      Resources
    </h2>
    <hr class="border-b w-8 m-auto my-6">
  </div>

{#   start Resources listing #}
  
  <div class="container container max-w-xl m-auto flex flex-wrap flex-col md:flex-row items-center justify-start">
	    <div class="flex flex-wrap">

		{% set entries = craft.entries.section('resources').limit(4).all() %}

			{% for entry in entries %}
				<div class="w-full lg:w-1/2 p-3">
			      <div class="flex flex-col lg:flex-row rounded overflow-hidden border shadow shadow-lg">
				        <div class="flex flex-wrap justify-between bg-white rounded-b lg:rounded-b-none lg:rounded-r leading-normal p-4">            
							<div class="text-black text-3xl italic leading-normal">
								<a href="{{ entry.getUrl }}" class="no-underline text-black hover:text-gray-dark">
									{{ entry.title }}
								</a>	
							</div>
							<div class="text-black text-xl leading-normal">
								{{ entry.summary }}
								<br>
								<a href="{{ entry.getUrl }}" class="no-underline text-grey hover:text-gray-dark italic">
									Read more Â»
								</a>
							</div>
						</div>
					</div>
				</div>
			
		{% endfor %}



		</div>
	</div>
</section>

{% endif %}