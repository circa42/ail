  <div class="text-center container lg:pt-16 m-auto" id="contact"> 
    <label for="tagline" class="uppercase tracking-wide font-bold text-center text-grey-dark"> Contact 
    </label>
    <h2 class="mt-2 mb-4 max-w-sm m-auto italic">
      Us
    </h2>
    <hr class="border-b w-8 m-auto my-6">
  </div>


<div class="flex flex-wrap max-w-lg m-auto text-center pb-16">

  <div class="mx-auto px-8 py-6">

    <p class="text-black">
        {% set entry = craft.entries().id(2).one() %}
        {{ entry.contactUs|replace ({
            '<a href': '<a class="no-underline hover:text-grey-darkest text-grey-dark text-2xl" href',
            '<p>': '<p class="text-black text-2xl mb-8">'}) |raw }}
    </p>




        <div class="text-4xl justify-right border-t border-gray mt-8 pt-8">
        {% for block in social.socialMediaMatrix.all() %}
            <a href="{{ block.socialUrl }}" target="_blank" class="text-red-darker hover:text-grey no-underline p-2">
                {% switch block.socialChannel %}
                    {% case "facebook" %}
                        <i class="fab fa-facebook"></i>
                    {% case "instagram" %}
                        <i class="fab fa-instagram"></i>
                    {% case "amazon" %}
                        <i class="fab fa-amazon"></i>
                    {% case "twitter" %}
                        <i class="fab fa-twitter"></i>        
                        
                {% endswitch %}
        {% endfor %}

                
        </a>
    </div>

  </div>

  </div>
</div>

