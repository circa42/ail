{% set entries = craft.entries.section('authors').all() %}


<section class="p-4 font-serif m-auto max-w-xl lg:py-32" id="authors">
    <div class="text-center container m-auto"> 
    <label for="tagline" class="uppercase tracking-wide font-bold text-center text-grey-dark"> About the 
    </label>
    <h2 class="mt-2 mb-4 font-medium max-w-sm m-auto italic">
      Authors
    </h2>
    <hr class="border-b w-8 m-auto my-6">
  </div>


  <div class="m-auto flex flex-wrap flex-col md:flex-row justify-start">
    
    {% for entry in entries %}
    {% set assets = entry.photo.all() %}
      <div class="flex flex-wrap md:w-1/2">
        <div class="w-1/3 lg:h-32">
          {% for asset in assets %}
            <img class="w-full lg:w-48 pt-6" src="{{ asset.getUrl() }}" alt="{{ entry.altTag }}">
          {% endfor %}
        </div>
        <div class="w-2/3 justify-between leading-normal p-4">           
          <div class="text-black text-xl leading-normal pr-8 mb-2">
            {{ entry.authorBio }}
          </div>
        </div>
      </div>
    {% endfor %}     

  </div>
</section>