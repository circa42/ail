
<div id="app" class="fixed z-40 w-full border-red-darker border-b-4 border-solid">
  <nav class="flex items-center justify-between flex-wrap bg-black p-4">
      <div class="flex items-center flex-no-shrink text-white mr-6">
        
        <div class="w-full p-2">
          <div class="w-full">
            <h1 class="block text-5xl text-right font-normal py-2">
            <a href="/" class="no-underline text-white">
              {{ siteName }}
              </a>
            </h1>
          </div>


        </div>
      </div>

      <div class="block lg:hidden">
        <button @click="toggle" class="flex items-center px-3 py-2 border rounded  hover:border-white">
          <svg class="fill-current bg-grey-light h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
        </button>
      </div>

      <div :class="open ? 'block': 'hidden'" class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
        <div class="text-sm lg:flex-grow text-right">
          <a href="{{ siteUrl }}#books" class="block mt-4 lg:inline-block lg:mt-0 text-base hover:text-grey-light text-white text-base font-serif uppercase no-underline mr-4">
            Books
          </a>
          <a href="{{ siteUrl }}#praise" class="block mt-4 lg:inline-block lg:mt-0 text-base hover:text-grey-light text-white text-base font-serif uppercase no-underline mr-4">
            Reviews
          </a>
{% if craft.entries.section('media').ids() %}
          <a href="{{ siteUrl }}#media" class="block mt-4 lg:inline-block lg:mt-0 text-base hover:text-grey-light text-white text-base font-serif uppercase no-underline mr-4">
            Media
          </a>
{% endif %}
          <a href="{{ siteUrl }}#photos" class="block mt-4 lg:inline-block lg:mt-0 text-base hover:text-grey-light text-white text-base font-serif uppercase no-underline mr-4">
            Photos
          </a>
          <a href="{{ siteUrl }}#authors" class="block mt-4 lg:inline-block lg:mt-0 text-base hover:text-grey-light text-white text-base font-serif uppercase no-underline mr-4">
            Authors
          </a>
{% if craft.entries.section('resources').ids() %}
          <a href="{{ siteUrl }}resources" class="block mt-4 lg:inline-block lg:mt-0 text-base hover:text-grey-light text-white text-base font-serif uppercase no-underline mr-4">
            Resources
          </a>
{% endif %}
          <a href="{{ siteUrl }}#contact" class="block mt-4 lg:inline-block lg:mt-0 text-base hover:text-grey-light text-white text-base font-serif uppercase no-underline mr-4">
            Contact
          </a>
          <div class="inline-block xs:mt-4 md:mt-0">
            <a href="{{ siteUrl }}journey" class="no-underline lg:mt-2">
              <button class="bg-yellow-dark hover:bg-red-darker hover:text-grey-light text-black py-2 px-4 block lg:inline-block  text-base text-base hover:text-grey-light font-serif uppercase no-underline">
                  Follow our &nbsp; Journey
              </button>
            </a>
          </div>
        </div>
        


    </div>

  </nav>
</div>

