<section class="bg-white font-serif max-w-xl m-auto lg:py-24" id="photos">
  <div class="text-center container m-auto"> 
    <label for="tagline" class="uppercase tracking-wide font-bold text-center text-grey-dark"> 
      Photos and Extras  
    </label>
    <h2 class="mt-2 mb-4 font-medium max-w-sm m-auto italic">
      from the memoir: <em>An Impossible Life</em>
    </h2>
    <hr class="border-b w-8 m-auto my-6">
  </div>


  <div class="flex flex-wrap m-auto justify-center">
  {% set entries = craft.entries.section('extras').all() %}

      {% for entry in entries %}
             {% if entry.type == 'photos' %}
               {% set assets = entry.photo.all() %}
               {% for asset in assets %}
                   <div class="w-48">
                     <div class="overflow-hidden p-4">
                       <a data-fancybox="gallery" href="{{ asset.getUrl('galleryFull') }}">
                         <img class="w-full rounded-lg shadow-lg" src="{{ asset.getUrl('galleryThumb') }}" alt="{{ entry.altTag }}" title="{{ entry.titleTag }}">
                       </a>
                      <div class="text-center text-grey-dark">
                         {{ entry.titleTag }}<br>
                       </div> 
                     </div>
                   </div>
               {% endfor %}
             {% endif %}
           {% endfor %}








